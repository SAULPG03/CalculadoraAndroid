<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Titulo del ejercicio-->
    <TextView
      android:id="@+id/txtTitulo"
      android:textColor="@color/blue"
      android:textSize="32dp"
      android:fontFamily="casual"
      android:gravity="center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/titulo">
    </TextView>

    <!--Pantalla numerica-->
    <EditText
        android:id="@+id/tvPantalla"
        android:text="0"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </EditText>

    <!--Boton 7-->
    <Button
        android:id="@+id/btnButton7"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPantalla"
        android:layout_toRightOf="@id/btnButton7"
        android:text="7"></Button>

    <!--Boton 8-->
    <Button
        android:id="@+id/btnButton8"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPantalla"
        android:layout_alignBaseline="@id/btnButton7"
        android:layout_toRightOf="@id/btnButton7"
        android:text="8">

    </Button>

    <!--Boton 9-->
    <Button
        android:id="@+id/btnButton9"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPantalla"
        android:layout_alignBaseline="@id/btnButton8"
        android:layout_toRightOf="@id/btnButton8"
        android:text="9">

    </Button>

    <!--Boton Multiplicar-->
    <Button
        android:id="@+id/btnButtonMulti"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPantalla"
        android:layout_alignBaseline="@id/btnButton9"
        android:layout_toRightOf="@id/btnButton9"
        android:text="X">

    </Button>

    <!--Boton 4-->
    <Button
        android:id="@+id/btnButton4"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnButton7"
        android:text="4">

    </Button>

    <!--Boton 5-->
    <Button
        android:id="@+id/btnButton5"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btnButton4"
        android:layout_toRightOf="@id/btnButton4"
        android:text="5">

    </Button>

    <!--Boton 6-->
    <Button
        android:id="@+id/btnButton6"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btnButton4"
        android:layout_toRightOf="@id/btnButton5"
        android:text="6">

    </Button>

    <!--Boton Restar-->
    <Button
        android:id="@+id/btnButtonRestar"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btnButton4"
        android:layout_toRightOf="@id/btnButton6"
        android:text="-">

    </Button>

    <!--Boton 1-->
    <Button
        android:id="@+id/btnButton1"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnButton4"
        android:text="1">

    </Button>

    <!--Boton 2-->
    <Button
        android:id="@+id/btnButton2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btnButton1"
        android:layout_toRightOf="@id/btnButton1"
        android:text="2">

    </Button>

    <!--Boton 3-->
    <Button
        android:id="@+id/btnButton3"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btnButton1"
        android:layout_toRightOf="@id/btnButton2"
        android:text="3">

    </Button>

    <!--Boton Sumar-->
    <Button
        android:id="@+id/btnButtonSumar"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btnButton1"
        android:layout_toRightOf="@id/btnButton3"
        android:text="+">

    </Button>

    <!--Boton 0-->
    <Button
        android:id="@+id/btnButton0"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnButton1"
        android:text="0">

    </Button>

    <!--Boton Delete-->
    <Button
        android:id="@+id/btnButtonDelete"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btnButton0"
        android:layout_toRightOf="@id/btnButton0"
        android:text="CE">

    </Button>

    <!--Boton Igual-->
    <Button
        android:id="@+id/btnButtonIgual"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btnButton0"
        android:layout_toRightOf="@id/btnButtonDelete"
        android:text="=">

    </Button>

    <!--Boton Division-->
    <Button
        android:id="@+id/btnButtonDivision"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btnButton0"
        android:layout_toRightOf="@id/btnButtonIgual"
        android:text="/">

    </Button>

  </RelativeLayout>